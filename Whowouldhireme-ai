Whowouldhireme-ai/
  ├─ worker.js        ← Cloudflare Worker backend
  └─ wrangler.jsonc   ← Config so Cloudflare knows how to deploy
export default {
  async fetch(request, env) {
    console.log("Incoming request:", request.method);

    const cors = {
      "Access-Control-Allow-Origin": "https://akkiex007.github.io",
      "Access-Control-Allow-Methods": "POST, OPTIONS",
      "Access-Control-Allow-Headers": "Content-Type",
    };

    if (request.method === "OPTIONS") {
      return new Response(null, { status: 204, headers: cors });
    }

    if (request.method !== "POST") {
      return new Response("Only POST allowed", { status: 405, headers: cors });
    }

    let body;
    try {
      body = await request.json();
      console.log("Parsed body:", body);
    } catch {
      console.log("JSON parse failed");
      return new Response(
        JSON.stringify({ error: "Invalid JSON" }),
        { status: 400, headers: cors }
      );
    }

    const profile = body.profile || "";
    console.log("Profile received:", profile);

    const prompt = `
Analyze this profile:
${profile}

Return ONLY valid JSON in this structure:
{
 "companies": [
  {
   "name": "Google",
   "match": 82,
   "role": "Software Engineer L4",
   "salary": "$180k-$230k",
   "reason": "Short explanation"
  }
 ]
}
`;

    console.log("Sending prompt to Claude…");

    const aiResponse = await fetch("https://api.anthropic.com/v1/messages", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        "x-api-key": env.ANTHROPIC_API_KEY,
        "anthropic-version": "2023-06-01",
      },
      body: JSON.stringify({
        model: "claude-3-5-sonnet-latest",
        max_tokens: 600,
        messages: [{ role: "user", content: prompt }]
      })
    });

    console.log("Claude responded with status:", aiResponse.status);

    const result = await aiResponse.json();
    console.log("Claude JSON:", result);

    if (!result?.content?.[0]?.text) {
      console.log("AI returned empty content");
      return new Response(
        JSON.stringify({
          result: JSON.stringify({
            companies: [{
              name: "Error",
              match: 0,
              salary: "N/A",
              reason: "AI returned no content"
            }]
          })
        }),
        { status: 200, headers: cors }
      );
    }

    console.log("Returning final JSON to frontend");
    return new Response(
      JSON.stringify({ result: result.content[0].text }),
      { status: 200, headers: { ...cors, "Content-Type": "application/json" } }
    );
  }
};

